{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "@mlp-vectorclub/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "modules/*": ["src/scss/modules/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules", "dist", ".next", "out"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js"]
}
